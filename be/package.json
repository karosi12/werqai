{
  "name": "job",
  "version": "1.0.0",
  "description": "A simple job listing restFul API",
  "main": "app.js",
  "scripts": {
    "start": "npm run prod",
    "prod": "cross-env NODE_ENV=production npm run clean && npm run transpile && ./node_modules/.bin/npm-run-all build server",
    "build": "npm-run-all clean transpile",
    "clean": "rimraf ./dist",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "server": "node dist/bin/www.js",
    "dev": "nodemon --watch src --delay 250ms --exec babel-node src/bin/www.js --ignore tests/",
    "test": "cross-env NODE_ENV=test nyc --reporter=html mocha --require babel-core/register src/test/**/*.spec.js --exit && nyc report --timeout 50000"
  },
  "keywords": [],
  "author": "Kayode Adeyemi",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "errorhandler": "^1.5.1",
    "eslint": "^5.15.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "expect.js": "^0.3.1",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "factory-girl": "5.0.4",
    "faker": "^5.1.0",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "mongoose": "^8.5.1",
    "morgan": "^1.9.1",
    "nock": "^10.0.1",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.0.1",
    "supertest": "^4.0.2",
    "winston": "^3.2.1"
  }
}
